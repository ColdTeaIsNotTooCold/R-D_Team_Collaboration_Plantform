# =============================================================================
# 团队协作平台环境变量配置
# =============================================================================

# 应用配置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
APP_NAME=team-collaboration-platform
APP_VERSION=1.0.0

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# 数据库配置
DATABASE_URL=postgresql://ccpm_user:ccpm_password@postgres:5432/ccpm_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis配置
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=ccpm_redis_password
REDIS_POOL_SIZE=20
REDIS_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# API配置
API_V1_STR=/api/v1
PROJECT_NAME=Team Collaboration Platform
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000"]

# 服务器配置
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# 日志配置
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=8001
HEALTH_CHECK_INTERVAL=30

# Agent配置
MAX_AGENTS=10
MAX_TASKS_PER_AGENT=100
AGENT_TIMEOUT=300
AGENT_HEARTBEAT_INTERVAL=60

# 文件存储配置
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=[".txt", ".json", ".csv", ".xlsx"]

# 邮件配置（可选）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=

# 外部服务配置（可选）
OPENAI_API_KEY=
OTHER_API_KEY=

# =============================================================================
# 开发环境专用配置
# =============================================================================
if ENVIRONMENT == "development":
    DEBUG=true
    RELOAD=true
    LOG_LEVEL=DEBUG

# =============================================================================
# 生产环境专用配置
# =============================================================================
if ENVIRONMENT == "production":
    DEBUG=false
    RELOAD=false
    LOG_LEVEL=WARNING
    WORKERS=4